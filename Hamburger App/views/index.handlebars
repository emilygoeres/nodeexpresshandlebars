<h1>Emily's Hamburgers!</h1>

<h2>Hamburgers!</h2>

<ul>
  {{#each hamburgers}}
    {{#unless devour}}
      {{> hamburgers/hamburger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Hamburgers!</h2>

<ul>
  {{#each hamburgers}}
    {{#if devour}}
      {{> <hamburgers>
      <hamburger1></hamburger1>-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Hamburger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Hamburger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devour">devour?</label><br>
    <input type="radio" name="devour" value="1" checked> devour!<br>
    <input type="radio" name="devour" value="0"> Awake
  </div>

  <button type="submit">Add Hamburger</button>
</form>
